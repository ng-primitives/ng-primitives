{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "<%= className %>",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the component",
      "default": "<%= propertyName %>"
    },
    "prefix": {
      "type": "string",
      "description": "The prefix to apply to the generated component selector.",
      "default": "app"
    },
    "directory": {
      "type": "string",
      "description": "The directory at which to create the component file",
      "default": ""
    },
    "style": {
      "type": "string",
      "description": "The file extension or preprocessor to use for style files, or `none` to skip generating the style file.",
      "default": "css",
      "enum": ["scss", "css"]
    },
    "inlineStyle": {
      "type": "boolean",
      "description": "Include styles inline in the component.ts file. Only CSS styles can be included inline.",
      "default": true
    },
    "inlineTemplate": {
      "type": "boolean",
      "description": "Include template inline in the component.ts file",
      "default": true
    }
  }
}
