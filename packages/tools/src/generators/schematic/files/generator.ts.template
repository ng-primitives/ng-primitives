import { formatFiles, generateFiles, names, Tree } from '@nx/devkit';
import * as path from 'path';
import { <%= className %>GeneratorSchema } from './schema';

export async function <%= propertyName %>Generator(tree: Tree, options: <%= className %>GeneratorSchema) {
  generateFiles(tree, path.join(__dirname, 'files'), options.directory, {
    ...options,
    ...names(options.name),
    selector: `${options.prefix}-${names(options.name).fileName}`,
    styles: `:host { }`,
    template: `<ng-content />`
  });

  if (options.inlineStyle) {
    tree.delete(path.join(options.directory, `${options.fileName}.component.${options.style}`));
  }

  if (options.inlineTemplate) {
    tree.delete(path.join(options.directory, `${options.fileName}.component.html`));
  }

  await formatFiles(tree);
}

export default <%= propertyName %>Generator;
